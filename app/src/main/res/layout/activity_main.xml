<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:giou="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:textSize="25dp"
        android:text="按键"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"/>

    <com.giousa.customecircledemo.CustomProgressBarView
        giou:firstColor = "@color/colorAccent"
        giou:secondColor = "@color/colorPrimary"
        giou:circleWidth = "2dp"
        giou:speed = "21"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="31dp"
        android:id="@+id/customProgressBarView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
